{
  "compilerOptions": {
    "removeComments": false,
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noEmitOnError": true,
    "esModuleInterop": true,
    "module": "node16",
    "lib": ["dom", "es2015"],
    "allowImportingTsExtensions": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}